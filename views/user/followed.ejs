<style type="text/css">
  .text11 {
  display: block;
  width: 500px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
</style>
<!-- end::Body -->
<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default"  >

<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">

  <!-- begin::Header -->
  <% include ../header.ejs %>
  <!-- end::Header -->

  <!-- begin::Body -->
  <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
    <!-- BEGIN: Left Aside -->
    <button class="m-aside-left-close m-aside-left-close--skin-dark" id="m_aside_left_close_btn"><i class="la la-close"></i></button>

    <!-- END: Left Aside -->
    <div class="m-grid__item m-grid__item--fluid m-wrapper">

      <!-- BEGIN: Subheader -->
      <div class="m-subheader ">

        <div class="d-flex align-items-center">
          <div class="mr-auto">
            <h3 class="m-subheader__title ">Followed Auctions</h3>
          </div>
        </div>
      </div>
      <!-- END: Subheader -->
      <div class="m-content">
        <!--Begin::Main Portlet-->
        <div class="row">
          <div class="col-xl-12 col-sm-12">
            <!--begin:: Widgets/Audit Log-->
            <div class="m-portlet m-portlet--full-height list-main">
              <div class="m-portlet__body ">
                <div class="tab-content followed-main">
                  <div class="table-responsive">
                    <table width="100%" border="0" cellspacing="0" cellpadding="0">
                      <tbody>
                      <tr>
                        <th>Status</th>
                        <th>Auction Name</th>
                        <th><span style="color:#F7921A; font-weight:400;">
                              <svg style="width:1em;" class="svg-inline--fa fa-bitcoin fa-w-16" aria-hidden="true" data-prefix="fab" data-icon="bitcoin" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M504 256c0 136.967-111.033 248-248 248S8 392.967 8 256 119.033 8 256 8s248 111.033 248 248zm-141.651-35.33c4.937-32.999-20.191-50.739-54.55-62.573l11.146-44.702-27.213-6.781-10.851 43.524c-7.154-1.783-14.502-3.464-21.803-5.13l10.929-43.81-27.198-6.781-11.153 44.686c-5.922-1.349-11.735-2.682-17.377-4.084l.031-.14-37.53-9.37-7.239 29.062s20.191 4.627 19.765 4.913c11.022 2.751 13.014 10.044 12.68 15.825l-12.696 50.925c.76.194 1.744.473 2.829.907-.907-.225-1.876-.473-2.876-.713l-17.796 71.338c-1.349 3.348-4.767 8.37-12.471 6.464.271.395-19.78-4.937-19.78-4.937l-13.51 31.147 35.414 8.827c6.588 1.651 13.045 3.379 19.4 5.006l-11.262 45.213 27.182 6.781 11.153-44.733a1038.209 1038.209 0 0 0 21.687 5.627l-11.115 44.523 27.213 6.781 11.262-45.128c46.404 8.781 81.299 5.239 95.986-36.727 11.836-33.79-.589-53.281-25.004-65.991 17.78-4.098 31.174-15.792 34.747-39.949zm-62.177 87.179c-8.41 33.79-65.308 15.523-83.755 10.943l14.944-59.899c18.446 4.603 77.6 13.717 68.811 48.956zm8.417-87.667c-7.673 30.736-55.031 15.12-70.393 11.292l13.548-54.327c15.363 3.828 64.836 10.973 56.845 43.035z"></path></svg></span>Current Bid</th>
                        <th><span style="color:#F7921A; font-weight:400;">
                              <svg style="width:1em;" class="svg-inline--fa fa-bitcoin fa-w-16" aria-hidden="true" data-prefix="fab" data-icon="bitcoin" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M504 256c0 136.967-111.033 248-248 248S8 392.967 8 256 119.033 8 256 8s248 111.033 248 248zm-141.651-35.33c4.937-32.999-20.191-50.739-54.55-62.573l11.146-44.702-27.213-6.781-10.851 43.524c-7.154-1.783-14.502-3.464-21.803-5.13l10.929-43.81-27.198-6.781-11.153 44.686c-5.922-1.349-11.735-2.682-17.377-4.084l.031-.14-37.53-9.37-7.239 29.062s20.191 4.627 19.765 4.913c11.022 2.751 13.014 10.044 12.68 15.825l-12.696 50.925c.76.194 1.744.473 2.829.907-.907-.225-1.876-.473-2.876-.713l-17.796 71.338c-1.349 3.348-4.767 8.37-12.471 6.464.271.395-19.78-4.937-19.78-4.937l-13.51 31.147 35.414 8.827c6.588 1.651 13.045 3.379 19.4 5.006l-11.262 45.213 27.182 6.781 11.153-44.733a1038.209 1038.209 0 0 0 21.687 5.627l-11.115 44.523 27.213 6.781 11.262-45.128c46.404 8.781 81.299 5.239 95.986-36.727 11.836-33.79-.589-53.281-25.004-65.991 17.78-4.098 31.174-15.792 34.747-39.949zm-62.177 87.179c-8.41 33.79-65.308 15.523-83.755 10.943l14.944-59.899c18.446 4.603 77.6 13.717 68.811 48.956zm8.417-87.667c-7.673 30.736-55.031 15.12-70.393 11.292l13.548-54.327c15.363 3.828 64.836 10.973 56.845 43.035z"></path></svg></span>Buyout Price</th>
                        <th>Views</th>
                        <th>Date</th>
                      </tr>

                      <% if(followedAuctions.length) { %>
                        <% for(let i=0; i<followedAuctions.length; i++) { %>
                          <tr>
                            <%if (followedAuctions[i]["auctionDetails"].soldOut == 1) {%>
                              <td>Sold</td>

                            <%} else {%>
                               <% if(followedAuctions[i]["auctionDetails"].adminApproved && followedAuctions[i]["auctionDetails"].status == 0) { %>
                                <td>Expired</td>
                              <%  } else { %>
                                <td>Live</td>
                              <% } %>
                            <%}%>

                              <%if (followedAuctions[i]["auctionDetails"].soldOut == 1) {%>
                                                          <td>
                              <a style="word-break: break-all;">
                                 <%= followedAuctions[i]["auctionDetails"].name %>
                              </a>
                            </td>
                            <%} else {%>
                               <% if(followedAuctions[i]["auctionDetails"].adminApproved && followedAuctions[i]["auctionDetails"].status == 0) { %>
                                                            <td>
                              <a style="word-break: break-all;">
                                 <%= followedAuctions[i]["auctionDetails"].name %>
                              </a>
                            </td>
                              <%  } else { %>
                              <td style="overflow: hidden;white-space: nowrap;">
                              <a style="word-break: break-all;width: 80%" href="/users/<%= user %>/auctions/<%= followedAuctions[i].auctionDetails.name %>">
                                 <%= followedAuctions[i]["auctionDetails"].name %>
                              </a>
                            </td>
                              <% } %>
                            <%}%>


                            <td><span> <%= followedAuctions[i].auctionDetails.currentBid %></span></td>
                            <td><%if (followedAuctions[i].auctionDetails.buyoutPrice != "") {%><span>

                              <%= followedAuctions[i].auctionDetails.buyoutPrice%></span><%} else {%><span>Not Available</span><%}%></td>
                            <td><%= followedAuctions[i].auctionDetails.uniqueViews %></td>
                            <td><%= followedAuctions[i].date %></td>
                          </tr>
                        <% } %>
                      <% } %>
                      </tbody>
                    </table>
                  </div>
                  <% if(followedAuctions.length == 0 ) { %>
                  <div class="row" style="margin: 4%;padding-left: 28%;font-size: 18px">
                  <span >You are not following any auctions at this time.</span></div>
                  <%}%>
                </div>
              </div>
            </div>
          </div>
            <!--<div>
              No Auction Found.
            </div>
         -->
        </div>
      </div>
    </div>
  </div>
  <!-- end:: Body -->

  <!-- begin::Footer -->
  <% include ../footer.ejs %>
  <!-- end::Footer -->
</div>
