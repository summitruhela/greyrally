<!DOCTYPE html>
<html lang="en" >
<!-- begin::Head -->
<head>
<meta charset="utf-8" />
<title>Grey Rally</title>
<meta name="description" content="Latest updates and statistic charts">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
<!--end::Web font -->
<link href="/css/suggestion-box.css" rel="stylesheet" type="text/css">

<!--begin::Base Styles -->

<!--begin::Page Vendors -->
<link href="/css/fullcalendar.bundle.css" rel="stylesheet" type="text/css" />
<!--end::Page Vendors -->
<link href="/css/suggestion-box.css" rel="stylesheet" type="text/css">

<link href="/css/vendors.bundle.css" rel="stylesheet" type="text/css" />
<link href="/css/style.bundle.css" rel="stylesheet" type="text/css" />
<link href="/css/reset.css" rel="stylesheet" type="text/css" />
<!--end::Base Styles -->

<!--begin::Font CSS -->
<link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<!--end::Font CSS -->

<link rel="shortcut icon" href="/img/favicon.png" sizes="16*16" />

</head>
<!-- end::Head -->

<!-- end::Body -->
<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default"  >

<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">
  <!-- begin::Header -->
  <% include ../header.ejs %>
  <!-- end::Header -->
  <!-- begin::Body -->
  <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
    <!-- BEGIN: Left Aside -->
    <button class="m-aside-left-close m-aside-left-close--skin-dark" id="m_aside_left_close_btn"><i class="la la-close"></i></button>

    <!-- END: Left Aside -->
    <div class="m-grid__item m-grid__item--fluid m-wrapper">
      <!-- BEGIN: Subheader -->
      <div class="m-subheader ">

        <!-- Breadcrumb -->
        <ol class="breadcrumb" style="background-color: transparent; padding-left: 0px; padding-right: 0rem; padding-bottom: 0rem;">
          <li class="breadcrumb-item" ><a href="/" style="font-weight: bold; color: #2ADA79">Home</a></li>
          <li class="breadcrumb-item"><a href="/users/<%= user %>/profile" style="font-weight: bold; color: #2ADA79"><%= user %></a></li>
          <li class="breadcrumb-item"><a href="/users/<%= user %>/auctions " style="font-weight: bold; color: #2ADA79"> auctions </a></li>
          <li class="breadcrumb-item active" style="font-weight: bold;">Comments</li>
        </ol>
        <!-- ======== -->

        <div class="d-flex align-items-center">
          <div class="mr-auto">
            <h3 class="m-subheader__title "><%= user %> - Comments</h3>
          </div>
        </div>
      </div>
      <!-- END: Subheader -->
      <div class="col-xl-12">
        <div class="m-portlet m-portlet--mobile ap-custom mt-4">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text">Comments </h3>
              </div>
            </div>
          </div>
          <div class="m-portlet__body">
            <div class="m_datatable m-datatable m-datatable--default m-datatable--loaded" id="m_datatable_latest_orders" style="">
              <div class="table-responsive">
                <table class="m-datatable__table table-bg" style="height: 380px;" id="TBLcomments">
                  <thead class="m-datatable__head">
                    <tr class="m-datatable__row" style="height: 55px;">
                      <th class="m-datatable__cell m-datatable__cell--sort auction_td1_width">Auction</th>
                      <th class="m-datatable__cell m-datatable__cell--sort auction_td1_width">Title</th>
                      <th class="m-datatable__cell m-datatable__cell--sort auction_td4_width">Description</th>
                      <th class="m-datatable__cell m-datatable__cell--sort auction_td4_width text-center">Date-Time</th>
                    </tr>
                  </thead>
                  <tbody class="m-datatable__body">
                    <div id="mCSB_1" class="mCustomScrollBox mCS-light mCSB_vertical mCSB_inside">
                      <div id="mCSB_1_container" class="mCSB_container mCS_y_hidden mCS_no_scrollbar_y">
                        <% for(let i=0; i<comments.length; i++) { %>
                          <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;">
                            <td class="m-datatable__cell--sorted m-datatable__cell auction_td1_width"><%= comments[i].auction %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell auction_td2_width"><%= comments[i].title %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell auction_td2_width"><%= comments[i].description %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell auction_td2_width" align="center"><%= comments[i].createdAt %></td>
                           <!--  <span class="btn_span">
                              <span class="m-badge m-badge--success m-badge--wide btn_width">
                                <a href="#">Read More>></a>
                              </span>
                            </span> -->
                          </tr>
                          <% } %>

                      </div>

                      <div id="mCSB_1_scrollbar_vertical" class="mCSB_scrollTools mCSB_1_scrollbar mCS-light mCSB_scrollTools_vertical" style="display: none;">
                        <div class="mCSB_draggerContainer">
                          <div id="mCSB_1_dragger_vertical" class="mCSB_dragger" style="position: absolute; min-height: 30px; height: 0px; top: 0px;">
                            <div class="mCSB_dragger_bar" style="line-height: 30px;"></div>
                          </div>
                          <div class="mCSB_draggerRail"></div>
                        </div>
                      </div>
                    </div>
                  </tbody>
                </table>
              </div>

              <% if(comments.length == 10) { %>
                <div class="m-portlet__foot">
                  <div class="m-form__action">
                    <div align="center" >
                      <div >
                        <input
                          type="button"
                          id="moreComments"
                          style="background:#bb78bb; color:white"
                          value="Load More comments!!!" >
                      </div>
                      <div id="ajaxLoader" style="display: none;">
                        <img src="/img/ajax-loader.gif">
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>

              <div class="m-portlet__foot m-portlet__foot--fit">
                <div class="m-form__actions">
                  <div class="row">
                    <div class="col-12 text-center mt-3 ">
                      <a href="/<%= user %>">
                        <button type="button" class="btn btn-accent m-btn m-btn--air m-btn--custom mi_button">Back</button>
                      </a>
                      &nbsp;&nbsp;
                      <a href="/users/<%= user %>/feed">
                        <button type="button" class="btn btn-accent m-btn m-btn--air m-btn--custom mi_button">My Feed</button>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- begin::Footer -->
    <% include ../footer.ejs %>
  <!-- end::Footer -->
<!-- end:: Page -->
<!-- begin::Scroll Top -->
<!-- <div class="m-scroll-top m-scroll-top--skin-top" data-toggle="m-scroll-top" data-scroll-offset="500" data-scroll-speed="300"> <i class="fa fa-angle-up"></i> </div> -->
<!-- end::Scroll Top --> <!-- begin::Quick Nav -->

<!--begin::Base Scripts -->
<script src="/js/jquery-1.11.1.min.js"></script>
<script src="/js/bootstrap.min.js" type="text/javascript"></script>
<script src="/js/vendors.bundle.js" type="text/javascript"></script>
<script src="/js/scripts.bundle.js" type="text/javascript"></script>
<script src="/js/common/common.js" type="text/javascript"></script>
<!--end::Base Scripts -->

<!-- infinite scrolling for comments ======================================= -->
<script>
  let limit = 10;
  $("#moreComments").click(function(){
    $("#ajaxLoader").show();
    $.ajax({
      type: "POST",
      url: "/users/:username/auctions/comments",
      data: { limit: limit },
      success: function(comments) {
        $("#ajaxLoader").hide();
        $('#TBLcomments tbody').empty();
        for(let i=0; i<comments.length; i++) {
          let content = `<tr class="m-datatable__row m-datatable__row--even" style="height: 55px;">
                          <td class="m-datatable__cell--sorted m-datatable__cell auction_td1_width">`+ comments[i].auction +`</td>
                          <td class="m-datatable__cell--sorted m-datatable__cell auction_td2_width">`+ comments[i].title +`</td>
                          <td class="m-datatable__cell--sorted m-datatable__cell auction_td2_width">` + comments[i].description + `
                          </td>
                          <td class="m-datatable__cell--sorted m-datatable__cell auction_td2_width" align="center">` + comments[i].createdAt + `</td>
                        </tr>`
          $('#TBLcomments').append(content);
        }
        limit = Number(limit) + 10;
      },
    });
  })
</script>
<!-- ======================================================================= -->

</body>
<!-- end::Body -->
</html>
