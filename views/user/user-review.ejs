<!DOCTYPE html>
<html lang="en" >
<!-- begin::Head -->
<head>
<meta charset="utf-8" />
<title>Grey Rally</title>
<meta name="description" content="Latest updates and statistic charts">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
<!--end::Web font -->
<!--begin::Page Vendors -->
<link href="/css/fullcalendar.bundle.css" rel="stylesheet" type="text/css" />
<!--end::Page Vendors -->
<link href="/css/vendors.bundle.css" rel="stylesheet" type="text/css" />
<link href="/css/style.bundle.css" rel="stylesheet" type="text/css" />
<link href="/css/reset.css" rel="stylesheet" type="text/css" />

<!--begin::Font CSS -->
<link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<!--end::Font CSS -->
<link href="/css/suggestion-box.css" rel="stylesheet" type="text/css">

<link rel="shortcut icon" href="/img/favicon.png" sizes="16*16" />

</head>
<!-- end::Head -->

<!-- end::Body -->
<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default"  >

<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">

  <!-- begin::Header -->
  <% include ../header.ejs %>
  <!-- end::Header -->

  <!-- begin::Body -->
  <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
    <!-- BEGIN: Left Aside -->
    <button class="m-aside-left-close m-aside-left-close--skin-dark" id="m_aside_left_close_btn"><i class="la la-close"></i></button>
    <!-- END: Left Aside -->
    <div class="m-grid__item m-grid__item--fluid m-wrapper">
      <!-- BEGIN: Subheader -->
      <div class="m-subheader ">
        <div class="d-flex align-items-center">
          <div class="mr-auto">
            <h3 class="m-subheader__title ">Review</h3>
          </div>
        </div>
      </div>
      <!-- END: Subheader -->

      <div class="col-xl-12">
        <div class="m-portlet m-portlet--mobile ap-custom mt-4">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text"><%= buyerOrSeller %>'s Review</h3>
              </div>
            </div>
          </div>
          <div class="m-portlet__body">

            <div class="m_datatable m-datatable m-datatable--default m-datatable--scroll  m-datatable--loaded " id="m_datatable_latest_orders" style="">
              <div class="m-section__content customtable table-responsive">

              <br>
              <div class="m-portlet__head-title">
                <h6 class="m-portlet__head-text">User's Rating :
                  <i class="fa fa-star" style="color: #2ADA79" aria-hidden="true"></i>
                  <i class="fa fa-star" style="color: #2ADA79" aria-hidden="true"></i>
                  <i class="fa fa-star" style="color: #2ADA79" aria-hidden="true"></i>
                  <i class="fa fa-star" style="color: #2ADA79" aria-hidden="true"></i>
                  <i class="fa fa-star" style="color: #2ADA79" aria-hidden="true"></i>
                </h6>
              </div>
              <br>
              <br>

              <div class="m-portlet__head-title">
                <h6 class="m-portlet__head-text">Auctions - Created</h6>
              </div>

                <table class="table table-responsive m-datatable__table" style="display: block; height: 380px; width:100%;">
                  <thead class="m-datatable__head">
                    <tr class="m-datatable__row " style="height: 55px;">
                      <th class="auction_td1_width"> Auction </th>
                      <th class="auction_td1_width">No.of Views</th>
                      <th class="auction_td1_width">Rating</th>
                    </tr>
                  </thead>
                  <tbody class="m-datatable__body " style="height: 325px; position: relative; overflow: visible;" data-scrollbar-shown="true">
                    <% for(let i=0; i<created.length; i++) {  %>
                      <tr class="m-datatable__row m-datatable__row--even">
                        <td> <%= created[i].name %> </td>
                        <td> <%= created[i].uniqueViews %> </td>
                        <td>
                          <p><span class="orange-text1"><%= created[i].adminRating %> /</span> 10.0</p>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>

            <div class="m_datatable m-datatable m-datatable--default m-datatable--scroll  m-datatable--loaded " id="m_datatable_latest_orders" style="">
              <div class="m-section__content customtable table-responsive">

              <div class="m-portlet__head-title">
                <h6 class="m-portlet__head-text">Auctions - Purchased</h6>
              </div>

                <table class="table table-responsive m-datatable__table" style="display: block; height: 380px; width:100%;">
                  <thead class="m-datatable__head">
                    <tr class="m-datatable__row " style="height: 55px;">
                      <th class="auction_td1_width">Auction</th>
                      <th class="auction_td1_width">Created By</th>
                      <th class="auction_td1_width">Buyout Price</th>
                    </tr>
                  </thead>
                  <tbody class="m-datatable__body " style="height: 325px; position: relative; overflow: visible;" data-scrollbar-shown="true">
                    <% if(purchased != null) { %>
                      <% for(let i=0; i<purchased.length; i++) {  %>
                        <tr class="m-datatable__row m-datatable__row--even">
                          <td> <%= purchased[i].auction %></td>
                          <td> <%= purchased[i].auctionCreatedBy %></td>
                          <td> <%= purchased[i].finalAmmount %> USD</td>
                        </tr>
                      <% } %>
                    <% } else { %>
                      No auctions found.
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- begin::Footer -->
  <% include ../footer.ejs %>
  <!-- end::Footer -->
</div>
<!-- end:: Page -->

