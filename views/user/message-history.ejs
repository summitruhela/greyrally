<!-- More received messages-log ============================================ -->
<script>
  let limit = 10;
  $("#receivedLog").click(function(){
    $("#ajaxLoader").show();
    $.ajax({
      type: "POST",
      url: "/users/messages/moreLog",
      data: { limit: limit, case: 'receiver' },
      success: function(messages) {
        $("#ajaxLoader").hide();
        $('#TBLreceived tbody').empty();
        for(let i=0; i<messages.length; i++) {
          let content = `<tr class="m-datatable__row m-datatable__row--even" style="height: 55px;">
                            <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].sender +`</td>
                            <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].status + `</td>
                            <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].messageId + `</td>
                            <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].createdAt + `</td>
                          </tr>`
          $('#TBLreceived').append(content);
        }
        limit = Number(limit) + 10;
      },
    });
  })
</script>
<!-- ======================================================================= -->

<!-- More sent messages-log ============================================ -->
<script>
  let limit2 = 10;
  $("#sentLog").click(function(){
    $("#ajaxLoader2").show();
    $.ajax({
      type: "POST",
      url: "/users/messages/moreLog",
      data: { limit: limit2, case: 'sender' },
      success: function(messages) {
        $("#ajaxLoader2").hide();
        $('#TBLsent tbody').empty();
        for(let i=0; i<messages.length; i++) {
          let content = `<tr class="m-datatable__row m-datatable__row--even" style="height: 55px;">
                          <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].receiver +`</td>
                          <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].status + `</td>
                          <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].messageId + `</td>
                          <td class="m-datatable__cell--sorted m-datatable__cell">` + messages[i].createdAt + `</td>

                        </tr>`
          $('#TBLsent').append(content);
        }
        limit2 = Number(limit2) + 10;
      },
    });
  })
</script>
<!-- ======================================================================= -->

<!-- =============Delete all message histoty =============================== -->

<script type="text/javascript">
  $('#dltHistory').click(function() {
    url = window.location.pathname;
    let user = url.split( '/' );
    let username = user[2];
    swal({
      title: "Are you sure?",
      text: "This will delete all the message history related to " + username,
      type: "warning",
      showCancelButton: true,
      confirmButtonClass: "btn-danger",
      confirmButtonText: "Yes, delete it!",
      cancelButtonText: "No, cancel plx!",
      closeOnConfirm: false,
      closeOnCancel: false
    },
    function(isConfirm) {
      if (isConfirm) {
        $.ajax({
          type: "POST",
          url: "/users/" + username + "/messages/deleteAll",
          success: function(response) {
            swal({
              title: "Success!",
              text: "Redirecting in 2 seconds.",
              type: "success",
              timer: 2000,
              showConfirmButton: false
            }, function(){
                window.location.href = "/users/" + username + "/messages";
            });
          },
        });
      } else {
        swal("Canceled", "Your messages are safe :)", "error");
      }
    }, 1000);
  })
</script>

