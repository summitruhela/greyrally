<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default"  >

<!-- begin:: Page -->
<div class="m-grid m-grid--hor m-grid--root m-page">

  <!-- begin::Header -->
  <% include ../header.ejs %>
  <!-- end::Header -->

  <!-- begin::Body -->
  <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
    <!-- BEGIN: Left Aside -->
    <button class="m-aside-left-close m-aside-left-close--skin-dark" id="m_aside_left_close_btn"><i class="la la-close"></i></button>

    <!-- END: Left Aside -->
    <div class="m-grid__item m-grid__item--fluid m-wrapper">

      <!-- BEGIN: Subheader -->
      <div class="m-subheader ">
        <div class="d-flex align-items-center">
          <div class="mr-auto">
            <h3 class="m-subheader__title ">Message History</h3>
          </div>
        </div>
      </div>
      <!-- END: Subheader -->

      <div class="col-xl-12">
        <div class="m-portlet m-portlet--mobile ap-custom mt-4">
          <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
              <div class="m-portlet__head-title">
                <h3 class="m-portlet__head-text"><%= user %> - Message History</h3>
              </div>
            </div>
          </div>
          <div class="m-portlet__body">
            <div class="font_size">
              This page showes the messseges sent and recived by you since Gray Rally does not have access to user communication,only a log is provided.<br/><br/>
            </div>
            <div class="table_title">
              <p class="title_style">Received</p>
            </div>
            <div class="m_datatable m-datatable m-datatable--default m-datatable--scroll  m-datatable--loaded" id="m_datatable_latest_orders" style="">
              <div class="table-responsive">
                <table class="m-datatable__table table-bg" id="TBLreceived" style="height: 380px;">
                  <thead class="m-datatable__head">
                    <tr class="m-datatable__row">
                      <th class="m-datatable__cell m-datatable__cell--sort text-center">Sender</th>
                      <th class="m-datatable__cell m-datatable__cell--sort text-center">Status</th>
                      <th class="m-datatable__cell m-datatable__cell--sort text-center">Id</th>
                      <th class="m-datatable__cell m-datatable__cell--sort text-center">Date Time</th>
                      <!-- <th class="m-datatable__cell text-center m-datatable__cell--sort auction_td2_width">Delete</th> -->
                    </tr>
                  </thead>

                  <tbody class="m-datatable__body">
                      <div id="mCSB_1" class="mCustomScrollBox mCS-light mCSB_vertical mCSB_inside">
                        <div id="mCSB_1_container" class="mCSB_container mCS_y_hidden mCS_no_scrollbar_y">

                        <% for(let i=0; i<received.length; i++) { %>
                          <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;">
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= received[i].sender %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= received[i].status %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= received[i].messageId %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= received[i].createdAt %></td>
                           <!--  <td data-field="Type" class="m-datatable__cell text-center"><span ><span class="m--font-bold m--font-danger"><a href="#" class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill" title="Delete"><i class="fa fa-trash-o"></i></a> </span></span></td> -->
                          </tr>
                        <% } %>
                      </div>

                      <div id="mCSB_1_scrollbar_vertical" class="mCSB_scrollTools mCSB_1_scrollbar mCS-light mCSB_scrollTools_vertical" style="display: none;">
                        <div class="mCSB_draggerContainer">
                          <div id="mCSB_1_dragger_vertical" class="mCSB_dragger" style="position: absolute; min-height: 30px; height: 0px; top: 0px;">
                            <div class="mCSB_dragger_bar" style="line-height: 30px;"></div>
                          </div>
                          <div class="mCSB_draggerRail"></div>
                        </div>
                      </div>
                    </div>
                  </tbody>
                </table>
              </div>

              <% if(received.length == 10) { %>
                <div class="m-portlet__foot">
                  <div class="m-form__action">
                    <div align="center" >
                      <div >
                        <input
                          type="button"
                          id="receivedLog"
                          style="background:#bb78bb; color:white"
                          value="Load More messages!!!" >
                      </div>
                      <div id="ajaxLoader2" style="display: none;">
                        <img src="/img/ajax-loader.gif">
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>

              <div class="col-xl-12 col-md-12 col-sm-12 table_title"><p class="title_style">Sent</p></div>
              <div class="table-responsive">
                <table class="m-datatable__table table-bg" id="TBLsent" style="height: 380px;">
                  <thead class="m-datatable__head">
                    <tr class="m-datatable__row" style="height: 55px;">
                    <th class="m-datatable__cell m-datatable__cell--sort text-center">Receiver</th>
                     <th class="m-datatable__cell m-datatable__cell--sort text-center">status</th>
                      <th class="m-datatable__cell m-datatable__cell--sort text-center">Id</th>
                    <th class="m-datatable__cell m-datatable__cell--sort text-center">Date Time</th>
                   <!--  <th class="m-datatable__cell text-center m-datatable__cell--sort auction_td2_width">Delete</th> -->
                  </thead>
                  <tbody class="m-datatable__body">
                      <div id="mCSB_1" class="mCustomScrollBox mCS-light mCSB_vertical mCSB_inside">
                        <div id="mCSB_1_container" class="mCSB_container mCS_y_hidden mCS_no_scrollbar_y">

                        <% for(let i=0; i<sent.length; i++) { %>
                          <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;">
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= sent[i].receiver %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= sent[i].status %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= sent[i].messageId %></td>
                            <td class="m-datatable__cell--sorted m-datatable__cell text-center"><%= sent[i].createdAt %></td>
                           <!--  <td data-field="Type" class="m-datatable__cell text-center"><span ><span class="m--font-bold m--font-danger"><a href="#" class="m-portlet__nav-link btn m-btn m-btn--hover-danger m-btn--icon m-btn--icon-only m-btn--pill" title="Delete"><i class="fa fa-trash-o"></i></a> </span></span></td> -->
                          </tr>
                        <% } %>
                      </div>

                      <div id="mCSB_1_scrollbar_vertical" class="mCSB_scrollTools mCSB_1_scrollbar mCS-light mCSB_scrollTools_vertical" style="display: none;">
                        <div class="mCSB_draggerContainer">
                          <div id="mCSB_1_dragger_vertical" class="mCSB_dragger" style="position: absolute; min-height: 30px; height: 0px; top: 0px;">
                            <div class="mCSB_dragger_bar" style="line-height: 30px;"></div>
                          </div>
                          <div class="mCSB_draggerRail"></div>
                        </div>
                      </div>
                    </div>
                  </tbody>
                </table>
              </div>

              <% if(sent.length == 10) { %>
                <div class="m-portlet__foot">
                  <div class="m-form__action">
                    <div align="center" >
                      <div >
                        <input
                          type="button"
                          id="sentLog"
                          style="background:#bb78bb; color:white"
                          value="Load More messages!!!" >
                      </div>
                      <div id="ajaxLoader" style="display: none;">
                        <img src="/img/ajax-loader.gif">
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>

              <div class="m-portlet__foot m-portlet__foot--fit">
                <div class="m-form__actions">
                  <div class="row">
                    <div class="col-12 text-center mt-3 ">
                      <a href="/<%= user %>">
                        <button type="button" class="btn btn-accent m-btn m-btn--air m-btn--custom mi_button">Back</button>
                      </a>
                      <a href="/users/<%= user %>/feed">
                        <button type="button" class="btn btn-accent m-btn m-btn--air m-btn--custom mi_button">My Feed</button>
                      </a>
                       <button type="button" id="dltHistory" class="btn btn-accent m-btn m-btn--air m-btn--custom mi_button">Delete Mesage History</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- begin::Footer -->
  <% include ../footer.ejs %>
  <!-- end::Footer -->
</div>
