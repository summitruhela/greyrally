<!DOCTYPE html>
<html lang="en">
<head>
<!-- Required meta tags -->
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<title>GREYRALLY | Admin</title>
<link rel="stylesheet" href="/css/font-awesome.min.css" />
<link rel="stylesheet" href="/admin/css/perfect-scrollbar.min.css" />
<link rel="stylesheet" href="/admin/css/style.css"/>
<link rel="shortcut icon" href="/images/favicon.png"/>

</head>
<body>
  <div class=" container-scroller">
    <!--Navbar-->
    <% include ./navbar.ejs %>
    <!--End navbar-->
    <div class="container-fluid">
    <div class="row row-offcanvas row-offcanvas-right">
    <!-- SIDEBAR STARTS -->
    <% include ./slidebar.ejs %>
    <!-- SIDEBAR ENDS -->
      <div class="content-wrapper">
        <h3 class="text-primary mb-4">Dashboard</h3>
        <% include ./header.ejs %>

      <!-- BEGIN: BODY-->

        <div class="card">
          <div class="card-block">
            <h5 class="card-title mb-4">Transaction Information</h5>
            <br>
            <br>
            <table id="hackers" class="display" cellspacing="0" width="100%">
              <tbody class="m-datatable__body mCustomScrollbar _mCS_8 mCS-autoHide _mCS_1" style="height: 325px; position: relative; overflow: visible;" data-scrollbar-shown="true">
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;">
                <td class="m-datatable__cell--sorted m-datatable__cell auction_td4_width">Block Hash</td>
                <td class="m-datatable__cell--sorted m-datatable__cell"><%= info.blockHash %></td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>Block Height</td>
                <td><%=info.blockHeight %></td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>Block Index</td>
                <td><%=info.blockIndex %></td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>Hash</td>
                <td style="font-size: 18px;color: forestgreen;"><%=info.hash %></td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
               <td>From Address</td>
                <td><%=info.fromAddress %></td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>To Address</td>
                <td><%=info.toAddress %></td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>Total Fund of Address</td>
                <td><%=info.amount %> BTC</td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>Transaction Fees</td>
                <td><%=info.fee %> BTC</td>
              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>No of Confirmations</td>

                <% if(info.confirmations > 5) { %>
                  <td style="font-size: 18px; font-weight: bold;color: green;"><i class="fa fa-lock" aria-hidden="true"></i>  <%=info.confirmations %> (Confirmed)</td>
                <% } else { %>
                  <td style="font-size: 18px; font-weight: bold;color: red;"><i class="fa fa-unlock-alt" aria-hidden="true"></i>  <%=info.confirmations %> (Not Confirmed)</td>
                <% } %>

              </tr>
              <tr class="m-datatable__row m-datatable__row--even" style="height: 55px;"">
                <td>Transaction Received Date</td>
                <td><%=info.receivedAt %></td>
              </tr>
            </tbody>
            </table>
          </div>
        </div>

      <!-- =========== -->

      </div>
      <!-- begin::Footer -->
      <% include ./footer.ejs %>
      <!-- end::Footer -->
    </div>
  </div>
<script type="text/javascript" src="/js/jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script type="text/javascript" src="/admin/js/perfect-scrollbar.jquery.min.js"></script>
<script type="text/javascript" src="/admin/js/off-canvas.js"></script>
<script type="text/javascript" src="/admin/js/hoverable-collapse.js"></script>
<script type="text/javascript" src="/admin/js/misc.js"></script>
<script type="text/javascript" src="/admin/js/maps.js"></script>

</body>
</html>
